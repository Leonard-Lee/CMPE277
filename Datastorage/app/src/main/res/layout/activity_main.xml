<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackColor"
    tools:context="com.example.leonardlee.datastorage.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:textColor="@color/whiteColor"
            android:text="@string/titleMain"/>

        <TextView
            android:id="@+id/txtInsert"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/custom_red_textview_layout"
            android:gravity="center"
            android:onClick="btnInsertClicked"
            android:text="INSERT NEW ITEM"
            android:textColor="@color/whiteColor"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txtSearch"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/custom_purple_textview_layout"
            android:gravity="center"
            android:onClick="btnSearchClicked"
            android:text="SEARCH ITEM"
            android:textAllCaps="false"
            android:textColor="@color/whiteColor"
            android:textSize="30dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
